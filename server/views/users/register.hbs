<div class="text-center">

    <form action={{routes.REGISTER}} method="post" class="form-signin">
        {{!-- <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt=""
            width="72" height="72"> --}}
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        <div class="form-group">
            <label for="email" class="sr-only">Email address</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required=""
                autofocus="" value={{model.email}}>

        </div>
        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" id="paswword" class="form-control" placeholder="Password"
                required="">

        </div>
        <div class="form-group">
            <label for="confirm-password" class="sr-only">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirm-password" class="form-control"
                placeholder="Confirm Password" required="">

        </div>
        <hr>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
</div>