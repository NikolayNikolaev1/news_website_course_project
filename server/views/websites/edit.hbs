<div class="text-center">
    <form action="/{{model.domain}}/edit" method="post" class="form-signin">
        <img class="mb-4" src="../../../images/logo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Edit Website</h1>
        <div class="form-group">
            <label for="name" class="sr-only">Title</label>
            <input type="text" name="name" id="name" class="form-control" placeholder="Name" required="" autofocus=""
                value="{{model.name}}">
        </div>
        <div class="form-group">
            <label for="domain" class="sr-only">Domain</label>
            <input type="text" name="domain" id="domain" class="form-control" placeholder="Domain" required=""
                value="{{model.domain}}">
        </div>
        <div class="form-group">
            <label for="description" class="sr-only">Description</label>
            <textarea name="description" id="description" class="form-control" placeholder="Description"
                required="">{{model.description}}</textarea>
        </div>
        <hr>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Edit</button>
    </form>
</div>